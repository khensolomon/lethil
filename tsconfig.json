{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"noImplicitAny": true,
		"outDir": "./",
		"strict": true,
		"allowJs": true,
		"removeComments":true,
		"esModuleInterop": false,
		"declaration": false,
		"pretty":false,
		"strictNullChecks": false,
		"types": ["node"],
		"baseUrl": ".",
		"paths": {
      "jquery": ["node_modules/jquery/dist/jquery"],
      "http": ["node_modules"]
    }
	},
	"files": [
    "./node_modules/@types/mocha/index.d.ts",
    "./node_modules/@types/node/index.d.ts"
  ],
	"include": [
	  "asset/index.ts",
	  "asset/essential.ts"
	],
	"exclude": [
	  "node_modules",
	  "test",
	  "dist"
	]
}
