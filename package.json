{
  "name": "lethil",
  "version": "1.1.7",
  "description": "...a minimal and configurable Node.js framework!",
  "main": "./dist/js/index.js",
  "module": "./dist/es/index.js",
  "type": "module",
  "scripts": {
    "lint": "eslint . --ext .js",
    "tst": "mocha -r test/*.js",
    "test": "mocha",
    "-lint": "eslint . --ext .ts",
    "-prepublish": "npm run build",
    "-test": "mocha -r ts-node/register test/*.ts",
    "-test-single": "mocha -r ts-node/register",
    "build": "npm run tsc",
    "tsc": "tsc -p tsconfig.json && tsc -p tsconfig-cs.json",
    "tsc-esm": "tsc -p tsconfig.json",
    "tsc-cjs": "tsc -p tsconfig-cs.json",
    "-watch": "tsc --watch --noEmit --project ./tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khensolomon/lethil.git"
  },
  "files": [],
  "keywords": [
    "framework"
  ],
  "author": "Khen Solomon Lethil",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/khensolomon/lethil/issues"
  },
  "homepage": "https://github.com/khensolomon/lethil/#readme",
  "engines": {
    "node": ">=14.15.3"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^14.14.20",
    "mocha": "^8.2.1"
  },
  "tmp-dev": [
    "npm i --save-dev mocha",
    "npm i --save-dev pug"
  ]
}
