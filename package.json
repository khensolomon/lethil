{
  "name": "lethil",
  "version": "1.1.7-beta.2",
  "description": "...a minimal and configurable Node.js framework!",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    "node": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "default": "./dist/index.js"
  },
  "scripts": {
    "tst": "mocha -r test/*.js",
    "test": "mocha",
    "prepublish": "npm run build",
    "build": "npm run tsc",
    "tsc": "tsc -p tsconfig.json",
    "lint": "eslint . --ext .js",
    "-test": "mocha -r ts-node/register test/*.ts",
    "-test-single": "mocha -r ts-node/register",
    "-watch": "tsc --watch --noEmit --project ./tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khensolomon/lethil.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "framework",
    "command line interface",
    "minimal",
    "configurable"
  ],
  "author": "Khen Solomon Lethil",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/khensolomon/lethil/issues"
  },
  "homepage": "https://github.com/khensolomon/lethil/#readme",
  "engines": {
    "node": ">=14.15.3"
  },
  "dependencies": {
  },
  "devDependencies": {
    "typescript": "^4.1.3",
    "@types/node": "^14.14.20",
    "mocha": "^8.2.1"
  },
  "tmp-dev": [
    "npm i --save-dev mocha",
    "npm i --save-dev pug"
  ]
}
